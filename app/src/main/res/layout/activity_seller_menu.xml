<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <ImageView
        android:contentDescription="@string/principal_image_description"
        android:id="@+id/principalImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/inicial"
        android:alpha="0.2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/principal_image_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/principal" />

        <Button
            android:id="@+id/buttonPublishProperty"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="76dp"
            android:text="@string/first_option_seller"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewMenu"
            android:background="@drawable/button"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/house" />

        <Button
            android:id="@+id/buttonMyPublications"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/align_left"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/second_option_seller"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPublishProperty" />

        <Button
            android:id="@+id/buttonInterested"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/fallowers"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/third_option_seller"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonMyPublications" />

        <Button
            android:id="@+id/buttonDates"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/four_option_seller"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonInterested" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>